{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/mfbutner/PrairieLearnEasyMoss/blob/main/question.schema.json",
  "title": "Easy Moss Global Schema",
  "allOf": [
    {
      "$id": "https://github.com/mfbutner/PrairieLearnEasyMoss/blob/main/question_overridables.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "question_name": {
          "description": "The name of the question in Prairie Learn",
          "type": "string",
          "minLength" : 1
        },
        "submitted_files": {
          "description": "A list of glob patterns matching the names of the files the students submitted",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        },
        "base_files": {
          "description": "List of one or more glob patterns specifying paths to files on this computer that contain base files. Base files are those that were provided to the student",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "required": [
        "question_name",
        "submitted_files"
      ]
    }
  ]
}